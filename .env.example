# ============================================================================
# GOOGLE SHEETS 配置
# ============================================================================

# --- 新版統一配置（推薦）---
# 所有 worksheets 都在同一個 Google Sheet 中

GOOGLE_SHEET_ID=your_google_sheet_id_here

# Worksheet 名稱（這些是預設值，可根據實際 worksheet 名稱調整）
GOOGLE_WS_PROFILES=Researcher
GOOGLE_WS_PROMPTS=prompt_inuse
GOOGLE_WS_ALL_POST=all_post
GOOGLE_WS_SCRAPED_OUTPUT=scraped_output

# --- 舊版配置（已棄用，僅供向後相容）---
# 如果使用新版 GOOGLE_SHEET_ID，請忽略以下變數

# GOOGLE_X_ACCOUNT_ID=your_main_sheet_id
# GOOGLE_X_PROFILES_WORKSHEET=Researcher
# GOOGLE_X_PROMPTS_SHEET_ID=your_prompts_sheet_id
# GOOGLE_X_PROMPTS_WORKSHEET=prompt_inuse
# GOOGLE_X_SCRAPE_OUTPUT=your_output_sheet_id
# GOOGLE_X_SCRAPE_OUTPUT_WORKSHEET=scraped_output

# --- 內容參考 Sheet（可選，可與主 Sheet 分開或相同）---
# GOOGLE_X_CONTENT_SHEET_ID=your_content_sheet_id
# GOOGLE_X_CONTENT_WORKSHEET=Sheet1

# ============================================================================
# 服務帳號憑證
# ============================================================================
GOOGLE_SERVICE_ACCOUNT_PATH=/path/to/your/service_account.json

# 或使用 Base64 編碼的憑證（用於 Railway 等雲端部署）
# GOOGLE_SHEETS_CREDENTIALS_BASE64=your_base64_encoded_credentials

# ============================================================================
# APIFY 配置
# ============================================================================
APIFY_TOKEN=your_apify_token_here
APIFY_ACTOR_ID=scraper_one/x-profile-posts-scraper

# ============================================================================
# 抓取設定
# ============================================================================
MAX_PROFILE_URLS=3           # 最多處理幾個 profiles（0 = 全部）
POST_RESULTS_LIMIT=3         # 每個 profile 抓取幾篇貼文
LOOKBACK_DAYS=30             # 只抓取最近幾天的貼文
PROFILE_BATCH_START=0        # 批次處理起始索引
PROFILE_BATCH_SIZE=0         # 批次大小（0 = 處理全部）

# ============================================================================
# AI/LLM 配置
# ============================================================================
OPENAI_API_KEY=your_openai_api_key

# ============================================================================
# X (TWITTER) 發文設定
# ============================================================================
ENABLE_X_POSTING=false       # 設為 "true" 才會真的發文到 X

# 以下僅在 ENABLE_X_POSTING=true 時需要
# X_API_KEY=your_x_api_key
# X_API_SECRET=your_x_api_secret
# X_ACCESS_TOKEN=your_x_access_token
# X_ACCESS_TOKEN_SECRET=your_x_access_token_secret
# X_CLIENT_ID=your_x_client_id
# X_CLIENT_SECRET=your_x_client_secret
# X_BEARER_TOKEN=your_x_bearer_token
